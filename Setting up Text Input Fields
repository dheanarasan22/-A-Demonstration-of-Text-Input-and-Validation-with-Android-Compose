@Composable
fun TextInputField(
    label: String,
    value: String,
    onValueChange: (String) -> Unit,
    isSingleLine: Boolean = true
) {
    OutlinedTextField(
        value = value,
        onValueChange = onValueChange,
        label = { Text(label) },
        singleLine = isSingleLine,
        modifier = Modifier
            .fillMaxWidth()
            .padding(8.dp)
    )
}
